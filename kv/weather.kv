# This is the graphics page for the notification part of the application
# presents users with tips and suggestions based on the current weather
# goes alongside the notifications.py file

#:import App kivy.app.App

<WeatherPage>:
    canvas:
        Color:
            rgb: 172/255.0, 218/255.0, 229/255.0 ,1
        Rectangle:
            size: self.size
            pos: self.pos
    Button:
        font_size: 40
        background_normal: ''
        background_color: 199/255.0, 166/255.0, 0/255.0 ,1.0
        size_hint: 0.1,0.07
        pos_hint: {"x": 0.01, "y": .92}
        text: "Back"
        on_press: root.manager.current = 'menu'
    Image:
        source: '../kv/WeatherIcon.png'
        size_hint: 0.1,0.1
        pos_hint: {"x": 0.23, "y": 0.82}
        spacing: [40,0]

    Label:
        size_hint: 0.5,0.5
        pos_hint: {"center_x": 0.55, "center_y": .87}
        font_size: 90
        bold: True
        color: 0,0,0,1
        text: "Weather Forecast"
    GridLayout:
        cols: 1
        pos_hint: {"center_x": 0.5, "center_y": .5}
        size_hint: 0.9,0.6
        padding:40,40,40,40
        TextInput:
            multiline: False
    GridLayout:
        cols:2
        pos_hint: {"center_x": 0.5, "center_y": .15}
        size_hint: 0.7,0.1
        spacing: [40,0]
        padding:20,20,20,20
        Button:
            font_size: 40
            background_normal: ''
            background_color: 199/255.0, 166/255.0, 0/255.0 ,1.0
            text: "Refresh"
        Button:
            font_size: 40
            background_normal: ''
            background_color: 199/255.0, 166/255.0, 0/255.0 ,1.0
            text: "Exit"
            on_press: app.stop()

