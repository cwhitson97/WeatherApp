# This is the graphics page for the main part of the application
# presents users with a main page which allows them to either sign in or create an account
# goes alongside the main.py file

#:import builder kivy.lang.Builder

<MainPage>:
    canvas:
        Color:
            rgb: 172/255.0, 218/255.0, 229/255.0 ,1
        Rectangle:
            size: self.size
            pos: self.pos
    Label:
        size_hint: 0.3,0.3
        font_size: 80
        bold: True
        pos_hint: {'x': 0.40, 'y': 0.75}
        color: 0,0,0,1
        text: "Weather Forecast"
    Image:
        source: '../kv/WeatherIcon.png'
        size_hint: 0.1,0.1
        pos_hint: {"x": 0.25, "y": 0.857}
    GridLayout:
        cols:2
        size_hint: 0.8,0.1
        pos_hint: {"x": 0.1, "y": 0.75}
        spacing: [40,0]
        padding: 20,20,20,20
        Button:
            font_size: 40
            background_normal: ''
            background_color: 199/255.0, 166/255.0, 0/255.0 ,1.0
            size_hint: 0.15,0.15
            text: "7 Day Forecast"
            on_press: root.manager.current = 'forecast'
        Button:
            font_size: 40
            background_normal: ''
            background_color: 199/255.0, 166/255.0, 0/255.0 ,1.0
            size_hint: 0.15,0.15
            text: "Notifications"
            on_press: root.manager.current = 'weather'
    GridLayout:
        cols: 1
        rows: 2
        pos_hint: {"center_x": 0.3, "center_y": 0.40}
        size_hint: 0.4,0.65
        Label:
            readonly: True
            bold: True
            size_hint: 0.4,0.05
            foreground_color: 255,247,0,1
            color: 0,0,0,1
            text: "Today's Forecast"
        TextInput:
            size_hint: 0.4,0.6
            readonly: True